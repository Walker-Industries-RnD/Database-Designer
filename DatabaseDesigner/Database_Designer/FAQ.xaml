<Page
    x:Class="Database_Designer.FAQ"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Database_Designer" Width="1310" Height="920">

    <Grid x:Name="FAQUI" MaxWidth="1310" MaxHeight="920" MinHeight="920" Width="1310" MinWidth="1310" Visibility="Visible"  >


        <StackPanel VerticalAlignment="Center" MinHeight="920" MaxHeight="1310">
            <!-- Header -->
            <Grid MinHeight="40">
                <Rectangle Fill="#454138" Stroke="Transparent" Height="40" VerticalAlignment="Top" Margin="0,0,12,0" />
                <StackPanel Orientation="Horizontal" MinWidth="500" HorizontalAlignment="Left">
                    <Image Margin="8,4,4,4"
   Source="Assets/Images/WILogoNoText.png"
   HorizontalAlignment="Left"
   MaxHeight="30" MinWidth="30" MinHeight="30" MaxWidth="30" />
                    <TextBlock Foreground="#FFFFFF"
       FontSize="18"
       FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
       VerticalAlignment="Center"
       Text="F&amp;Q" />
                </StackPanel>
                <StackPanel Width="71" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,14,-3" Height="39" >
                    <Button Name = "ExitButton" Content="X" Width="36" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Background="#FFDCD8C0" HorizontalAlignment="Right" Height="37" >
                        <Button.Foreground>
                            <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                        </Button.Foreground>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Content Area -->
            <Grid Height="880" Visibility="Visible">
                <Image Stretch="Fill" Height="880" Source="Assets/Images/BG.png"/>
                <StackPanel Margin="0,0,16,0">
                    <ScrollViewer VerticalScrollBarVisibility="Visible" Margin="10,10,10,10" Height="847" Width="1279">
                        <StackPanel x:Name="FaQStack">
                            <Button Content="Will This Ever Cost Money To Use Commercially?" Background="#FF454138" FontSize="22" Margin="0,10,0,10" Padding="14,14,14,14" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Name="Title" Visibility="Collapsed" />
                            <Grid Margin="0,5,0,0" Visibility="Collapsed" Background="#FF9D9785" Name="Description">
                                <TextBlock Text="Nope! This is (and will always be) a completely open source program! You can customize it to your needs and do whatever you want with the result! The only thing I require is a mention to the repo; I also do not allow copyrighting/patenting as I believe it limits developers (Case in point: Nemesis System)." FontSize="16" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" TextWrapping="Wrap" TextAlignment="Center" Margin="10,10,10,10" />
                            </Grid>
                        </StackPanel>

                    </ScrollViewer>
                </StackPanel>
            </Grid>









        </StackPanel>
    </Grid>

</Page>
