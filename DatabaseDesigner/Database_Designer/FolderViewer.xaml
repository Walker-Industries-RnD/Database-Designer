<Page
    x:Class="Database_Designer.FolderViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Database_Designer" Width="1310" Height="920" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" d:DesignWidth="1360" d:DesignHeight="1005.33349609375" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">



    <Grid x:Name="TablesView" MaxWidth="1310" MaxHeight="920" MinHeight="920" Width="1310" MinWidth="1310" Visibility="Visible"
 Height="920">

        <StackPanel VerticalAlignment="Center" MinHeight="920" MaxHeight="1310">
            <!-- Header -->
            <Grid MinHeight="40">
                <Rectangle Fill="#454138" Stroke="Transparent" Height="40" VerticalAlignment="Top" Margin="0,0,7,0" />
                <StackPanel Orientation="Horizontal" MinWidth="500" HorizontalAlignment="Left" Width="1234">
                    <Image Margin="8,4,4,4"
   Source="Assets/Images/WILogoNoText.png"
   HorizontalAlignment="Left"
   MaxHeight="30" MinWidth="30" MinHeight="30" MaxWidth="30" />
                    <TextBlock Foreground="#FFFFFF"
       FontSize="18"
       FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
       VerticalAlignment="Center"
       Text="Folder VIewer" />
                    <TextBlock Text="BG: 000" FontSize="14" Margin="700,0,20,0" Height="21" Foreground="White" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Name="BGSliderValue" />
                    <Slider Width="298" Name="BGSlider" Maximum="100" >
                        <Slider.Background>
                            <SolidColorBrush Color="{DynamicResource Theme_TextOnPrimaryColor}" />
                        </Slider.Background>
                    </Slider>
                </StackPanel>
                <StackPanel Width="80" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,7,-3" Height="39" >
                    <Button Name = "ExitButton" Content="X" Width="36" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Background="#FFDCD8C0" HorizontalAlignment="Right" Height="37" >
                        <Button.Foreground>
                            <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                        </Button.Foreground>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Content Area -->
            <Grid Height="880" Width="1310">
                <Rectangle Stroke="Gray" StrokeThickness="1" Margin="0,0,8,0" Fill="#913B3B3B" Name="BGPanel" >
                </Rectangle>
                
                <StackPanel Margin="0,0,8,0" Width="1310">
                    <Grid x:Name="FileExplorerArea" Width="1310" Height="920" Background="#00FAFAFA">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <!-- Sidebar -->
                            <ColumnDefinition Width="*"/>
                            <!-- Main area -->
                        </Grid.ColumnDefinitions>

                        <!-- Sidebar -->
                        <StackPanel Background="#FF3D3A33" Orientation="Vertical">
                            <TextBlock Text="Places"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="#FFDADADA"
                   Margin="16,20,0,8"
                   FontFamily="Assets/Fonts/Inter_28pt-Light.ttf" />

                            <!-- Sidebar Items -->
                            <StackPanel>
                                <Button BorderThickness="0" Padding="10,0,0,0" Margin="4,2" HorizontalAlignment="Stretch" Background="#14696969" Height="40" HorizontalContentAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Database_Designer;component/assets/images/whitelogo.png"
                           Width="30" Height="30" Margin="0,0,10,0"/>
                                        <TextBlock Text="Home"
                               VerticalAlignment="Center"
                               FontSize="13"
                               FontFamily="Assets/Fonts/Inter_28pt-Light.ttf">
                                            <TextBlock.Foreground>
                                                <SolidColorBrush Color="{DynamicResource Theme_TextOnPrimaryColor}" />
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                    </StackPanel>
                                </Button>

                                <Button BorderThickness="0" Padding="10,0,0,0" Margin="4,2" Background="#14696969" Height="40" HorizontalContentAlignment="Left">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Database_Designer;component/assets/images/whitelogo.png"
                           Width="30" Height="30" Margin="0,0,10,0"/>
                                        <TextBlock Text="Downloads"
                               VerticalAlignment="Center"
                               FontSize="13"
                               FontFamily="Assets/Fonts/Inter_28pt-Light.ttf">
                                            <TextBlock.Foreground>
                                                <SolidColorBrush Color="{DynamicResource Theme_TextOnPrimaryColor}" />
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                    </StackPanel>
                                </Button>

                                <!-- Add more sidebar entries as needed -->
                            </StackPanel>
                        </StackPanel>

                        <!-- Main Content Area -->
                        <WrapPanel Grid.Column="1" Orientation="Vertical" Margin="0,0,8,0">

                            <!-- Header -->
                            <StackPanel Height="48" Background="#FF454138" Orientation="Horizontal" Width="1090">
                                <Button Content="&lt;"
FontSize="16"
Width="40" Height="32"
Margin="6,0"
Grid.Column="1"
VerticalAlignment="Center"
Background="#FF5A5349"
Foreground="White"
BorderThickness="0" Name="Back" />

                                <Button Content=">"
FontSize="20"
Width="40" Height="32"
Margin="6,0,12,0"
Grid.Column="2"
VerticalAlignment="Center"
Background="#FF5A5349"
Foreground="White"
BorderThickness="0" Name="Forward" />
                                <TextBox x:Name="AddressBar"
                     Text="/User/Documents"
                     Margin="12,6,24,6"
                     VerticalAlignment="Center"
                     Height="32"
                     FontSize="14"
                     FontFamily="Assets/Fonts/Inter_28pt-Light.ttf"
                     Background="#DB464239"
                     Foreground="White"
                     BorderThickness="0"
                     Padding="8" Width="771" />

                                <Button Content="⟳"
                    FontSize="16"
                    Width="40" Height="32"
                    Margin="6,0"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Background="#FF5A5349"
                    Foreground="White"
                    BorderThickness="0" Name="Reload" />

                                <Button Content="+"
                    FontSize="20"
                    Width="40" Height="32"
                    Margin="6,0"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Background="#FF5A5349"
                    Foreground="White"
                    BorderThickness="0" Name="AddToPage" />
                                <Button Content="⌕"
                    FontSize="20"
                    Width="40" Height="32"
                    Margin="6,0,12,0"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Background="#FF5A5349"
                    Foreground="White"
                    BorderThickness="0" Name="SearchBtn" />
                            </StackPanel>


                            <!-- File Grid -->
                            <ScrollViewer
                      VerticalScrollBarVisibility="Hidden"
                      HorizontalScrollBarVisibility="Disabled" Height="831" Background="#00000000">
                                <UniformGrid Columns="8" HorizontalAlignment="Left" VerticalAlignment="Top" Name="FilesHolderUI">

                                    <!-- Folder -->

                                    <!-- File  -->

                                    



                                </UniformGrid>
                            </ScrollViewer>
                        </WrapPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>

</Page>
