<Page
    x:Class="Database_Designer.MusicPlayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Database_Designer">

    <Grid Width="901" Height="670">

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-264,400,-264" Width="488" Height="656">
            <Grid MinHeight="40">
                <Rectangle Fill="#454138" Stroke="Transparent" Height="40" VerticalAlignment="Top" Margin="0,0,2,0" />
                <StackPanel Orientation="Horizontal" MinWidth="500" HorizontalAlignment="Left">
                    <Image Margin="8,4,4,4"
Source="Assets/Images/WILogoNoText.png"
HorizontalAlignment="Left"
MaxHeight="30" MinWidth="30" MinHeight="30" MaxWidth="30" />
                    <TextBlock Foreground="#FFFFFF"
    FontSize="18"
    FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
    VerticalAlignment="Center"
    Text="Music Player" />
                </StackPanel>
                <StackPanel Width="85" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,3,-3" Height="39" >
                    <Button Name = "ExitButton" Content="X" Width="36" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Background="#FFDCD8C0" HorizontalAlignment="Right" Height="37" >
                        <Button.Foreground>
                            <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                        </Button.Foreground>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid VerticalAlignment="Top" Height="618">
                <Image Stretch="Fill"
                   VerticalAlignment="Top"
                   Source="Assets/Images/BG.png" Visibility="Visible" />
                <Grid Margin="0,0,0,0">
                    <Image Source="/Database_Designer;component/assets/images/volumeui/becomeasdustcover.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="24" Height="624" Stretch="UniformToFill" Margin="-128,-322,336,-328" Visibility="Visible" Name="SongImgBG" />
                    <Rectangle HorizontalAlignment="Center"
           VerticalAlignment="Center"
           Width="400"
           Height="336"
           Margin="-80,-360,-96,-104"
           RadiusX="20"
           RadiusY="20"
           Name="AlbumImgContainer">
                        <Rectangle.Fill>
                            <ImageBrush x:Name="AlbumCoverBrush"
                    ImageSource="/Database_Designer;component/assets/images/volumeui/becomeasdustcover.png"
                    Stretch="UniformToFill" />
                        </Rectangle.Fill>
                        <Rectangle.Effect>
                            <DropShadowEffect Color="Black"
                          BlurRadius="20"
                          ShadowDepth="10"
                          Opacity="0.6"
                          Direction="315"/>
                        </Rectangle.Effect>
                        <Rectangle.Stroke>
                            <SolidColorBrush Color="#FF837349" Opacity="0.8"/>
                        </Rectangle.Stroke>
                        <Rectangle.StrokeThickness>4</Rectangle.StrokeThickness>
                    </Rectangle>
                    <Image Source="/Database_Designer;component/assets/images/volumeui/becomeasdustcover.png" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="336" Stretch="Uniform" Margin="-80,-360,-96,-104" Name="AlbumImg" Visibility="Collapsed" />
                    <TextBlock Text="Memory Shaped Coffin - Sin Covered Longing " FontSize="22" Margin="56,360,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="56" Width="392" TextAlignment="Center" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Foreground="#FF060606" Name="SongTitle" />
                    <TextBlock Text="WalkerDev" FontSize="18" Margin="56,416,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="24" Width="392" TextAlignment="Center" TextTrimming="CharacterEllipsis" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" FontStyle="Italic" Foreground="#FF060606" Name="ArtistName" />
                    <Grid Margin="64,528,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="384" Height="32" Background="#00D4D4D4" >
                        <TextBlock Text="00:00:00" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" Height="24" Width="68" Margin="10,0,0,0" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Foreground="#FF060606" Name="TimerTick" />
                        <TextBlock Text="00:00:00" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Height="24" Width="123" TextAlignment="Right" Margin="0,0,10,0" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Foreground="#FF060606" Name="TotalTime" />
                    </Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="352" Height="64" Orientation="Horizontal" Margin="-8,328,-40,-16" Background="#00D4D4D4" >
                        <Button Width="43" Height="42" Margin="6,0,6,0" Name="Loop" Background="#FF837349">
                            <Image Source="/Database_Designer;component/assets/images/volumeui/repeat.png"
           Stretch="Uniform"
           Width="30"
           Height="23"/>
                        </Button>


                        <Button Width="59" Height="51" Background="#FF9D9785" Margin="6,0,6,0" Name="Back">
                            <Image Source="/Database_Designer;component/assets/images/volumeui/before.png"
       Stretch="Uniform"
       Width="30"
       Height="23"/>
                        </Button>


                        <Button Width="73" Height="61" Background="#FF9D9785" Margin="6,0,6,0" Name="PlayPause">
                            <Image Source="/Database_Designer;component/assets/images/volumeui/pause.png"
       Stretch="Uniform"
       Width="53"
       Height="42" Name="PlayPauseImg"/>
                        </Button>




                        <Button Width="59" Height="51" Background="#FF9D9785" Margin="6,0,6,0" Name="Forth">
                            <Image Source="/Database_Designer;component/assets/images/volumeui/next.png"
 Stretch="Uniform"
 Width="30"
 Height="23"/>
                        </Button>
                        


                        <Button Width="43" Height="42" Background="#FF9D9785" Margin="6,0,6,0" Name="Shuffle">
                            <Image Source="/Database_Designer;component/assets/images/volumeui/shuffle.png"
     Stretch="Uniform"
     Width="30"
     Height="23"/>
                        </Button>




                    </StackPanel>
                    <Slider x:Name="ProgressSlider"
        Margin="56,560,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Width="392"
        Height="32"
        ValueChanged="ProgressSlider_ValueChanged" />


                    <Button Background="#FF9D9785" Margin="456,312,8,272" Content=">" Name="SongList"/>


                </Grid>
                <TextBlock Text="TextBlock" FontSize="14" Margin="8,216,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="16" TextAlignment="Center" Width="448" Name="Setup" Visibility="Collapsed" />
            </Grid>

            
        </StackPanel>
        <Grid Margin="496,8,0,8" Background="#00F0F0F0" Name="Music" >
            <Image Source="/Database_Designer;component/assets/images/bg.png" Stretch="Fill" Margin="0,0,0,-4" />
            <TabControl Margin="8,8,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="376" Height="632">
                <TabItem Header="Become As Dust Album" Foreground="#FF060606" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf">
                    <Grid Height="582">
                        <ScrollViewer Margin="8,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="336" Height="568" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" >
                            <StackPanel Orientation="Vertical" Background="#00D4D4D4" Name="Album1" >
                                <Button Height="55" Padding="6" Background="#FF232323" Visibility="Collapsed">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="55"/>
                                            <!-- Image -->
                                            <ColumnDefinition Width="*"/>
                                            <!-- Text -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- Time -->
                                        </Grid.ColumnDefinitions>

                                        <!-- Song Image -->
                                        <Image Grid.Column="0"
               Width="45"
               Height="45"
               Stretch="UniformToFill"
               Source="/Database_Designer;component/assets/images/volumeui/becomeasdustcover.png"
               VerticalAlignment="Center"/>

                                        <!-- Song Name + Artist -->
                                        <StackPanel Grid.Column="1" 
                    Orientation="Vertical"
                    Margin="2,0,8,0"
                    VerticalAlignment="Center" Width="206">
                                            <TextBlock Text="Song Name"
                       FontWeight="Bold"
                       FontSize="14" Width="206" TextTrimming="CharacterEllipsis" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"/>
                                            <TextBlock Text="Artist Name"
                       FontSize="12"
                       Opacity="0.7" Width="206" TextTrimming="CharacterEllipsis" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"/>
                                        </StackPanel>

                                        <!-- Duration -->
                                        <TextBlock Grid.Column="2"
                   Text="3:42"
                   VerticalAlignment="Center"
                   FontSize="13"
                   Margin="8,0,4,0"/>
                                    </Grid>
                                </Button>
                           
                            </StackPanel>
                        </ScrollViewer>
                    
                    </Grid>
                </TabItem>
                <TabItem Header="Custom Songs" Foreground="#FF060606" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf">
                    <Grid>
                        <ScrollViewer Margin="8,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="336" Height="568" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" >
                            <StackPanel Orientation="Vertical" Background="#00D4D4D4" Name="CustomSongsList" >
                                <Button Height="55" Padding="6" Background="#FF232323" Visibility="Collapsed">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="55"/>
                                            <!-- Image -->
                                            <ColumnDefinition Width="*"/>
                                            <!-- Text -->
                                            <ColumnDefinition Width="Auto"/>
                                            <!-- Time -->
                                        </Grid.ColumnDefinitions>

                                        <!-- Song Image -->
                                        <Image Grid.Column="0"
               Width="45"
               Height="45"
               Stretch="UniformToFill"
               Source="/Database_Designer;component/assets/images/volumeui/becomeasdustcover.png"
               VerticalAlignment="Center"/>

                                        <!-- Song Name + Artist -->
                                        <StackPanel Grid.Column="1" 
                    Orientation="Vertical"
                    Margin="2,0,8,0"
                    VerticalAlignment="Center" Width="206">
                                            <TextBlock Text="Song Name"
                       FontWeight="Bold"
                       FontSize="14" Width="206" TextTrimming="CharacterEllipsis" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"/>
                                            <TextBlock Text="Artist Name"
                       FontSize="12"
                       Opacity="0.7" Width="206" TextTrimming="CharacterEllipsis" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"/>
                                        </StackPanel>

                                        <!-- Duration -->
                                        <TextBlock Grid.Column="2"
                   Text="3:42"
                   VerticalAlignment="Center"
                   FontSize="13"
                   Margin="8,0,4,0"/>
                                    </Grid>
                                </Button>
                            </StackPanel>
                        </ScrollViewer>
                                        </Grid>
                </TabItem>
            </TabControl>
        </Grid>

    </Grid>


    
</Page>
