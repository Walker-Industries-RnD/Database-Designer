<Page
    x:Class="Database_Designer.Projects"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Database_Designer" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">

    <Grid x:Name="DesignerTemplatesUI" MaxWidth="1270" MaxHeight="920" MinHeight="920" Width="1270" MinWidth="1310" Visibility="Visible"  >


        <StackPanel VerticalAlignment="Center" MinHeight="920" MaxHeight="1310" Visibility="Visible">
            <Grid MinHeight="40">
                <Rectangle Fill="#454138" Stroke="Transparent" Height="40" VerticalAlignment="Top" Margin="0,0,12,0" />
                <StackPanel Orientation="Horizontal" MinWidth="500" HorizontalAlignment="Left">
                    <Image Margin="8,4,4,4"
    Source="Assets/Images/WILogoNoText.png"
    HorizontalAlignment="Left"
    MaxHeight="30" MinWidth="30" MinHeight="30" MaxWidth="30" />
                    <TextBlock Foreground="#FFFFFF"
        FontSize="18"
        FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
        VerticalAlignment="Center"
        Text="Projects" />
                </StackPanel>
                <StackPanel Width="71" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,14,-3" Height="39" >
                    <Button Name = "ExitButton" Content="X" Width="36" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Background="#FFDCD8C0" HorizontalAlignment="Right" Height="37" >
                        <Button.Foreground>
                            <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                        </Button.Foreground>
                    </Button>
                </StackPanel>
            </Grid>


            <Grid VerticalAlignment="Top" MinHeight="880" MaxHeight="220" Visibility="Visible">
                <Image Stretch="Fill"
                   VerticalAlignment="Top"
                   MinHeight="880" MaxHeight="220"
                   Source="Assets/Images/BG.png" Visibility="Visible" />
                <Grid MinWidth="220">
                    <ScrollViewer HorizontalAlignment="Right" VerticalAlignment="Top" Width="800" Height="808" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Margin="0,0,50,0" Name="ProjectsListViewer" >
                        <StackPanel Orientation="Vertical" Background="#00D4D4D4" Name="ProjectsList" HorizontalAlignment="Center" Width="768" >
                            <StackPanel Orientation="Horizontal" Height="48" ProgressiveRenderingChunkSize="5">
                                <TextBox Text="Type A Project's Name/Description Here" Padding="10" 
          VerticalAlignment="Center" Width="652" Height="40"
          FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" SelectionStart="8" SelectionLength="1" PlaceholderText="Enter A Table Name" AcceptsTab="False" FontSize="14" Margin="0,0,0,0" Background="#DB464239" Name="SearchBar"/>
                                <ToggleButton Width="79" Margin="10,0,0,0" Content="Favorites" Background="#FF454138" Height="39" Name="Favorites" FontSize="13" Visibility="Collapsed"/>

                                <Button Width="100" Margin="10,0,0,0" Content="Search" Background="#FF454138" Height="39" Name="TableViewSearch" FontSize="13"/>

                            </StackPanel>
                            <Grid HorizontalAlignment="Left" Width="786" Height="264" Background="#FFF0F0F0" Visibility="Collapsed" >
                                <Image Source="/Database_Designer;component/assets/images/bg.png" Margin="0,0,0,0" Stretch="Fill" />
                                <StackPanel Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="784" Height="40" Orientation="Horizontal" Background="#FF454138" >
                                    <Rectangle Width="28" Stroke="Gray" StrokeThickness="1" Height="28" Fill="#FF2C2B28" Margin="10,0,0,0" />
                                    <TextBlock Text="Project AWCE - XOEC - XO35 - 4EO0" FontSize="18" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Height="23" Margin="6,0,0,0" >
                                        <TextBlock.Foreground>
                                            <SolidColorBrush Color="{DynamicResource Theme_TextOnPrimaryColor}" />
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                </StackPanel>
                                <Rectangle Margin="24,64,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="168" Height="168" Stroke="Gray" StrokeThickness="1" Fill="#FF454138" />
                                <Image Source="/Database_Designer;component/assets/images/whitelogo.png" Margin="40,80,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="144" Height="136" />
                                <TextBlock Text="Yorha Unit Database BAM1" FontSize="26" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-80,-96,-240,-8" Width="528" >
                                    <TextBlock.Foreground>
                                        <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                                    </TextBlock.Foreground>
                                </TextBlock>
                                <TextBlock Text="A Database Containing Data Regarding The Actions Of Yorha Operation“BECOME AS MAN” " FontSize="20" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Height="64" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="168,8,-8,-32" Width="536" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" >
                                    <TextBlock.Foreground>
                                        <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                                    </TextBlock.Foreground>
                                </TextBlock>
                                <Button Content="Open Project" Margin="208,192,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="248" Height="32" Background="#FF9D9785" FontSize="13" >
                                    <Button.Foreground>
                                        <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                                    </Button.Foreground>
                                </Button>
                                <Button Content="Edit Project" Margin="464,192,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="248" Height="32" Background="#FF9D9785" FontSize="13" >
                                    <Button.Foreground>
                                        <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                                    </Button.Foreground>
                                </Button>

                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                    <WrapPanel ProgressiveRenderingChunkSize="5" Margin="720,808,256,32">
                        <Button Content="&lt;"
FontSize="16"
Width="40" Height="32"
Margin="6,0"
Grid.Column="1"
VerticalAlignment="Center"
Background="#FF5A5349"
Foreground="White"
BorderThickness="0" Name="Back" />

                        <TextBlock Text="999/999 Projects" FontSize="17" VerticalAlignment="Center" Height="24" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" TextAlignment="Center" Margin="40,0,40,0" Foreground="#FF010101" Name="ProjectsIndicator" />


                        <Button Content=">"
FontSize="20"
Width="40" Height="32"
Margin="6,0,12,0"
Grid.Column="2"
VerticalAlignment="Center"
Background="#FF5A5349"
Foreground="White"
BorderThickness="0" Name="Forward" />
                    </WrapPanel>
                    <TextBlock Text="Select A Project" FontSize="36" Margin="40,24,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="48" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" >
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock Text="Loading Count..." FontSize="24" Margin="48,72,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Width="368" Name="ProjectsCountUI" Visibility="Visible" Foreground="#FF030303" />
                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="432" Height="136" Orientation="Vertical" Background="#00D4D4D4" Margin="16,0,0,0" >
                        <Button Content="View Custom Datatypes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="434" Height="44" Background="#FF9D9785" FontSize="15" Margin="0,6,0,0" Visibility="Collapsed" >
                            <Button.Foreground>
                                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                            </Button.Foreground>
                        </Button>
                        <Button Name ="GLORYTOMANKIND" HorizontalAlignment="Left" VerticalAlignment="Top" Width="434" Height="44" Background="#FF9D9785" FontSize="15" Margin="0,6,0,0" Content="Create Example" Foreground="Black" />
                        <Button Content="View Custom Templates" HorizontalAlignment="Left" VerticalAlignment="Top" Width="434" Height="44" Background="#FF9D9785" FontSize="15" Margin="0,6,0,0" Visibility="Collapsed" >
                            <Button.Foreground>
                                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                            </Button.Foreground>
                        </Button>
                        <Button Content="Create New Project" HorizontalAlignment="Left" VerticalAlignment="Top" Width="434" Height="44" Background="#FF9D9785" FontSize="15" Margin="0,6,0,0" Name="NewProjectBtn" >
                            <Button.Foreground>
                                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                            </Button.Foreground>
                        </Button>
                    </StackPanel>

                </Grid>
            </Grid>
        </StackPanel>
    </Grid>


</Page>
