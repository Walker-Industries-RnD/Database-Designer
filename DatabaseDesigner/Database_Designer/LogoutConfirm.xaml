<Page
    x:Class="Database_Designer.LogoutConfirm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Database_Designer">

    <Grid x:Name="LogoutConfirmation" MaxWidth="470" MaxHeight="240" MinHeight="240" Width="470" MinWidth="470" Visibility="Visible"  >


        <StackPanel MinHeight="240" MaxHeight="240" Width="470" Height="240">
            <Grid MinHeight="40">
                <Rectangle Fill="#454138" Stroke="Transparent" Height="40" VerticalAlignment="Top" Margin="0,0,2,0" />
                <StackPanel Orientation="Horizontal" MinWidth="500" HorizontalAlignment="Left">
                    <Image Margin="8,4,4,4"
Source="Assets/Images/WILogoNoText.png"
HorizontalAlignment="Left"
MaxHeight="30" MinWidth="30" MinHeight="30" MaxWidth="30" />
                    <TextBlock Foreground="#FFFFFF"
    FontSize="18"
    FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
    VerticalAlignment="Center"
    Text="Logout" />
                </StackPanel>
                <StackPanel Width="85" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,3,-3" Height="39" >
                    <Button Name = "ExitButton" Content="X" Width="36" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Background="#FFDCD8C0" HorizontalAlignment="Right" Height="37" >
                        <Button.Foreground>
                            <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                        </Button.Foreground>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid VerticalAlignment="Top" MinHeight="200" MaxHeight="200">
                <Image Stretch="Fill"
                   VerticalAlignment="Top"
                   MinHeight="200" MaxHeight="200"
                   Source="Assets/Images/BG.png" Height="200" />
                <StackPanel Margin="0,-64,0,0" MaxHeight="100" MinHeight="100" MinWidth="350" MaxWidth="350">
                        <TextBlock Margin="2,0,0,0"
                               FontSize="22"
                               FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
                                    Foreground="Black"
                               Text="Log Out"  TextAlignment="Center" Width="354" Name="Title" />
                    <TextBlock Margin="2,10,0,0"
        FontSize="16"
        FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
             Foreground="Black"
        Text="Are You Sure You Want To Log Out? All Of Your Project Information Is Automatically Saved" TextAlignment="Center" Width="354" TextWrapping="Wrap" Name="Details" />
                </StackPanel>
                <Grid Margin="0,0,0,44" MinHeight="40" MaxHeight="40" VerticalAlignment="Bottom" Height="40">
                    <StackPanel HorizontalAlignment="Center"
                            MaxHeight="60"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                        <Button Margin="5,0"
                            MinHeight="35"
                            FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
                            Background="#9D9785"
                            MinWidth="80"
                            HorizontalAlignment="Center"
                            Content="Yes" Name="Yes"  Foreground="Black"/>
                        <Button Margin="5,0"
                            MinHeight="35"
                            FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
                            Background="#9D9785"
                            MinWidth="80"
                            HorizontalAlignment="Center" Name="No" Foreground="Black" Content="No"
 />
                    </StackPanel>
                </Grid>
                <TextBlock Text="TextBlock" FontSize="14" Margin="8,216,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="16" TextAlignment="Center" Width="448" Name="Setup" Visibility="Collapsed" />
            </Grid>

        </StackPanel>
    </Grid>

</Page>