<Page
    x:Class="Database_Designer.DatabaseComposition"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Database_Designer" Width="1310" Height="920">

    <Grid x:Name="DatabaseCompositionUI" MaxWidth="1310" MaxHeight="920" MinHeight="920" Width="1310" MinWidth="1310" Visibility="Visible">
 

        <StackPanel VerticalAlignment="Center" MinHeight="920" MaxHeight="1310">
            
            <!-- Header -->
            <Grid MinHeight="40">
                <Rectangle Fill="#454138" Stroke="Transparent" Height="40" VerticalAlignment="Top" Margin="0,0,12,0" />
                <StackPanel Orientation="Horizontal" MinWidth="500" HorizontalAlignment="Left">
                    <Image Margin="8,4,4,4"
   Source="Assets/Images/WILogoNoText.png"
   HorizontalAlignment="Left"
   MaxHeight="30" MinWidth="30" MinHeight="30" MaxWidth="30" />
                    <TextBlock Foreground="#FFFFFF"
       FontSize="18"
       FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
       VerticalAlignment="Center"
       Text="Database Composition" />
                </StackPanel>
                <StackPanel Width="71" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,14,-3" Height="39" >
                    <Button Name = "ExitButton" Content="X" Width="36" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Background="#FFDCD8C0" HorizontalAlignment="Right" Height="37" >
                        <Button.Foreground>
                            <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                        </Button.Foreground>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Content Area -->
            <Grid Height="880">
                <Image Stretch="Fill" Height="880" Source="Assets/Images/BG.png"/>
                <StackPanel>
                    <ScrollViewer VerticalScrollBarVisibility="Disabled"
                      Width="1300" Height="820">
                        <StackPanel Height="870" VerticalAlignment="Top">
                            <!-- Database Composition Title -->
                            <Grid Margin="0,24,7,20" HorizontalAlignment="Right" Width="1280" Height="60" Background="#514F46">
                                <TextBlock Foreground="White" 
                         FontFamily="/Assets/Fonts/Inter_28pt-MediumItalic.ttf" VerticalAlignment="Center" HorizontalAlignment="Left"
                         FontSize="36" Text="Database Composition" Margin="14,0,0,0"/>
                            </Grid>
                            <!-- Composition Content -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" 
                        Width="1270" Height="550" HorizontalAlignment="Right">
                                <!-- Left Composition Block -->
                                <Grid Width="320">
                                    <Image Stretch="Fill" Source="Assets/Images/BG.png"/>
                                    <StackPanel Width="310">
                                        <StackPanel Orientation="Horizontal" Height="40" Background="#454138">
                                            <Image Margin="10,0,0,0" HorizontalAlignment="Left" 
                           Width="36" Height="36" VerticalAlignment="Center" 
                           Source="Assets/Images/WhiteLogo.png" Stretch="Fill"/>
                                            <TextBlock FontFamily="/Assets/Fonts/Inter_28pt-Thin.ttf" Foreground="White" 
                               Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" 
                               FontSize="18" Text="Database Integrations"/>
                                        </StackPanel>
                                        <Grid Margin="0,20" Width="280" Height="230">
                                            <Rectangle StrokeThickness="1" Fill="#FF201D16" Stroke="Transparent" />
                                            <Image Source="Assets/Images/MiraGraphic1.png"/>
                                        </Grid>
                                        <TextBlock Width="270" Height="170" FontSize="16" 
                             FontFamily="/Assets/Fonts/Inter_28pt-MediumItalic.ttf" 
                             TextAlignment="Center" HorizontalAlignment="Center" 
                             Text="TextBlockSo based on your database composition, i’d say you’re trying to make something close to Discord. Pretty alright, but you could definitely use more security in there; you’ve got a boat with a hole on the floor and duct tape isn’t gonna help!" TextWrapping="Wrap">
                                            <TextBlock.Foreground>
                                                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                        <Rectangle Stroke="Gray" Fill="LightGray" StrokeThickness="1" />
                                        <Button 
                          FontFamily="/Assets/Fonts/Inter_28pt-Light.ttf" 
                          HorizontalAlignment="Center" 
                          Width="270" Height="36" 
                          Content="Continue" Background="#FF9D9785">
                                            <Button.Foreground>
                                                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                                            </Button.Foreground>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                                <!-- Right Composition Block -->
                                <Grid Margin="10,0,0,0" Width="910" Height="540">
                                    <StackPanel Orientation="Horizontal">
                                        <Grid HorizontalAlignment="Center" Width="110" Height="540" Background="#FF3F7FC6">
                                            <Image Source="/Database_Designer;component/assets/images/lock.png" Height="110" Margin="10,10,10,10" />
                                        </Grid>
                                        <Rectangle HorizontalAlignment="Left" Width="80" Height="540" Stretch="Fill" Fill="#FF0000"/>
                                        <Rectangle HorizontalAlignment="Left" Width="249" Height="540" Stretch="Fill" Fill="#C30000"/>
                                        <Rectangle HorizontalAlignment="Left" Width="130" Height="540" Stretch="Fill" Fill="#FFA18F0A"/>
                                        <Rectangle HorizontalAlignment="Left" Width="128" Height="540" Stretch="Fill" Fill="#949494"/>
                                        <Rectangle HorizontalAlignment="Left" Width="135" Height="540" Stretch="Fill" Fill="#6B5C26"/>
                                        <Rectangle HorizontalAlignment="Left" Width="80" Height="540" Stretch="Fill" Fill="#000000"/>
                                    </StackPanel>
                                    <Image Stretch="Fill" Source="/Database_Designer;component/assets/images/grid.png" IsEnabled="False"/>
                                </Grid>
                            </StackPanel>


                            <WrapPanel Background="#00000000" Width="1244">
                                <!-- Base Server -->
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <Rectangle Width="10" Height="10" VerticalAlignment="Top" Margin="0,4,6,0" Fill="#FF3F7FC6"/>
                                    <StackPanel>
                                        <TextBlock Text="Base Server" FontWeight="Bold" Foreground="#333" FontSize="15" FontFamily="Assets\Fonts\Inter_28pt-Bold.ttf" Width="274"/>
                                        <TextBlock Text="The data required to make the server work at all; delete this and the server ceases to work!" 
                       FontSize="14" Foreground="#444" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" TextWrapping="Wrap" MaxWidth="300" Width="274"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Communication -->
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <Rectangle Width="10" Height="10" VerticalAlignment="Top" Margin="0,4,6,0" Fill="#FFC30000"/>
                                    <StackPanel>
                                        <TextBlock Text="Communication" FontWeight="Bold" Foreground="#333" FontSize="15" FontFamily="Assets\Fonts\Inter_28pt-Bold.ttf" Width="274"/>
                                        <TextBlock Text="All data related to messages, chatrooms, servers and organized communication in general." 
                       FontSize="14" Foreground="#444" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" TextWrapping="Wrap" MaxWidth="300" Width="274"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Security -->
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <Rectangle Width="10" Height="10" Fill="#BEBEBE" VerticalAlignment="Top" Margin="0,4,6,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Security" FontWeight="Bold" Foreground="#333" FontSize="15" FontFamily="Assets\Fonts\Inter_28pt-Bold.ttf" Width="274"/>
                                        <TextBlock Text="The data required to handle logins, oauth, 2-factor authorization and other security systems." 
                       FontSize="14" Foreground="#444" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" TextWrapping="Wrap" MaxWidth="300" Width="274"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Profiles -->
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <Rectangle Width="10" Height="10" Fill="#D23F3F" VerticalAlignment="Top" Margin="0,4,6,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Profiles" FontWeight="Bold" Foreground="#333" FontSize="15" FontFamily="Assets\Fonts\Inter_28pt-Bold.ttf" Width="274"/>
                                        <TextBlock Text="All data related to profile creation, management and change." 
                       FontSize="14" Foreground="#444" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" TextWrapping="Wrap" MaxWidth="300" Width="274"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Economy -->
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <Rectangle Width="10" Height="10" VerticalAlignment="Top" Margin="0,4,6,0" Fill="Red"/>
                                    <StackPanel>
                                        <TextBlock Text="Economy" FontWeight="Bold" Foreground="#333" FontSize="15" FontFamily="Assets\Fonts\Inter_28pt-Bold.ttf" Width="274"/>
                                        <TextBlock Text="All data related to marketplaces, finances, payments and general economic systems." 
                       FontSize="14" Foreground="#444" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" TextWrapping="Wrap" MaxWidth="300" Width="274"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Admin Systems -->
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <Rectangle Width="10" Height="10" VerticalAlignment="Top" Margin="0,4,6,0" Fill="#FF007020"/>
                                    <StackPanel>
                                        <TextBlock Text="Admin Systems" FontWeight="Bold" Foreground="#333" FontSize="15" FontFamily="Assets\Fonts\Inter_28pt-Bold.ttf" Width="274"/>
                                        <TextBlock Text="The data required to handle row level security, server admins and reporting among other systems." 
                       FontSize="14" Foreground="#444" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" TextWrapping="Wrap" MaxWidth="300" Width="274"/>
                                    </StackPanel>
                                </StackPanel>


                                <!-- Economy -->
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <Rectangle Width="10" Height="10" Fill="#6B1E1E" VerticalAlignment="Top" Margin="0,4,6,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Economy" FontWeight="Bold" Foreground="#333" FontSize="15" FontFamily="Assets\Fonts\Inter_28pt-Bold.ttf" Width="274"/>
                                        <TextBlock Text="All data related to marketplaces, finances, payments and general economic systems." 
                       FontSize="14" Foreground="#444" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" TextWrapping="Wrap" MaxWidth="300" Width="274"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Admin Systems -->
                                <StackPanel Orientation="Horizontal" Margin="10">
                                    <Rectangle Width="10" Height="10" Fill="#7C6A2D" VerticalAlignment="Top" Margin="0,4,6,0"/>
                                    <StackPanel>
                                        <TextBlock Text="Admin Systems" FontWeight="Bold" Foreground="#333" FontSize="15" FontFamily="Assets\Fonts\Inter_28pt-Bold.ttf" Width="274"/>
                                        <TextBlock Text="The data required to handle row level security, server admins and reporting among other systems." 
                       FontSize="14" Foreground="#444" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" TextWrapping="Wrap" MaxWidth="300" Width="274"/>
                                    </StackPanel>
                                </StackPanel>





                            </WrapPanel>









                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Grid>









        </StackPanel>
    </Grid>

</Page>
