<Page x:Class="Database_Designer.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Database_Designer"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Foreground="{DynamicResource Theme_TextBrush}" d:DesignWidth="2436.798828125" d:DesignHeight="1223.19970703125">
















    <Grid x:Name="LayoutRoot" KeyDown="LayoutRoot_KeyDown">
        
        
        
        
        
        
        
        
        
        <!-- First MiraH, set to Collapsed -->
        <Rectangle StrokeThickness="1" Stroke="#00000000" >
            <Rectangle.Fill>
                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
            </Rectangle.Fill>
        </Rectangle>
        <Image Source="/Database_Designer;component/assets/images/olderwallpaper.png" Stretch="Fill" Name="MainBG" />





        <Grid Background="#00305050" Name="Desktop" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <!-- Desktop area -->
                <RowDefinition Height="50" />
                <!-- Taskbar -->
            </Grid.RowDefinitions>
            <Canvas x:Name="DesktopCanvasCanvas" Grid.Row="0" Background="Transparent" Margin="0,0,0,32" >
            </Canvas>

  
            <!-- Taskbar -->
            <Grid Grid.Row="1" Margin="0,-32,0,0" Background="#61787878" Visibility="Visible" Name="LowBar">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Left group -->
                    <ColumnDefinition Width="*"/>
                    <!-- ScrollViewer fills remaining -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Right group -->
                </Grid.ColumnDefinitions>

                <!-- Left Section: Logo + Search -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Width="102" Background="#0A555555" Padding="0" TabIndex="2147483645" Name="MainButton">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="0"/>
                            </Style>
                        </Button.Resources>
                        <Image Source="/Database_Designer;component/assets/images/blacklogo.png" Stretch="Uniform" Width="70"/>
                    </Button>

                    <Grid Width="394" Height="72" Margin="6,0,6,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.Background>
                            <SolidColorBrush Color="{DynamicResource Theme_TextOnPrimaryColor}" />
                        </Grid.Background>

                        <!-- Search Icon -->
                        <Border Grid.Column="0" Background="#FFF" BorderBrush="#CCC" BorderThickness="1,1,0,1"
                    CornerRadius="6,0,0,6" Margin="0,0,-8,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <Image Source="/Database_Designer;component/assets/images/logos/controlpanel.png"
                       VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Uniform" Width="40"/>
                        </Border>

                        <!-- Search Input -->
                        <Border Grid.Column="1" CornerRadius="0,6,6,0" Background="#FFF" BorderBrush="#CCC" BorderThickness="0,1,1,1">
                            <TextBox PlaceholderText="Search here..."
                         FontSize="21" Padding="10,0,10,0" Background="Transparent"
                         BorderThickness="0" Height="72" VerticalContentAlignment="Center"
                         Foreground="#444" AcceptsReturn="False" TextWrapping="Wrap"
                         AcceptsTab="False" IsSpellCheckEnabled="True"
                         VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Visible"
                         SelectionBackground="{x:Null}" SelectionForeground="{x:Null}" CaretBrush="#FFDEDEDE"
                         Width="335" Name="SearchBar">
                                <TextBox.Resources>
                                    <Style TargetType="ContentControl" x:Key="PlaceholderTextStyle">
                                        <Setter Property="Foreground" Value="#888"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- ScrollViewer in middle -->
                <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled"
                  VerticalAlignment="Top" Padding="0" Height="80" >
                    <WrapPanel Orientation="Horizontal" Background="#00D4D4D4" Name="LowerAppBar" HorizontalAlignment="Center" VerticalAlignment="Center" >
                    </WrapPanel>
                </ScrollViewer>

                <!-- Right Section -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Height="82" Width="192"
                HorizontalAlignment="Right" Visibility="Visible">
                    <Button Width="35" Height="72" Background="#0A555555" Margin="6,0,6,0" Name="MuteBtn">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="0"/>
                            </Style>
                        </Button.Resources>
                        <Image Source="/Database_Designer;component/assets/images/volumeui/vol0.png" Stretch="Uniform"/>
                    </Button>

                    <!-- Copy same button as needed -->
                    <Button Width="35" Height="72" Background="#0A555555" Margin="6,0,6,0" Name="VolOptionToggle">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="0"/>
                            </Style>
                        </Button.Resources>
                        <Image Source="/Database_Designer;component/assets/images/window.png" Stretch="Uniform" Name="VolumeImg1" IsEnabled="False"/>
                    </Button>

                    <Button Width="35" Height="72" Background="#0A555555" Margin="6,0,6,0" Name="MusicPlayer">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="0"/>
                            </Style>
                        </Button.Resources>
                        <Image Source="/Database_Designer;component/Assets/Images/VolumeUI/Music.png" Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>


        </Grid>

        <WrapPanel Background="#00F0F0F0" Name="Apps" Visibility="Visible" Orientation="Vertical" IsEnabled="True" Margin="0,0,0,80" />

        <Canvas Background="{x:Null}" Name="IntroPage" Visibility="Visible" IsEnabled="True" Margin="0,0,0,80" />

        <WrapPanel x:Name="DesktopCanvas" Grid.Row="0" Background="Transparent" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="688" Margin="0,0,0,80" Visibility="Visible" >

            <Grid Canvas.Left="0" Canvas.Top="720" Width="840" Height="736" Background="#00F0F0F0" Name="MainMenu" Visibility="Visible" >
                <Grid Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="344" Height="728" Background="#FF454138" >
                    <Image Source="/Database_Designer;component/assets/images/darkbg.png" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="344" Height="728" Stretch="Fill" IsEnabled="False" />
                    <StackPanel Margin="16,32,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="304" Height="672" Background="#FF454138" >

                        <Button Height="55" Padding="10,0" Background="#4C8F8F8F" Name="LogoutButton">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Width="247">
                                <Image Source="/Database_Designer;component/assets/images/whitelogo.png" Margin="0,0,8,0" Width="40" Height="40" />
                                <TextBlock Text="Log Out (Autosaved)" VerticalAlignment="Center" Width="164" Margin="6,0,0,0" FontSize="16" FontFamily="Assets\Fonts\Inter_28pt-ExtraLight.ttf" />
                            </StackPanel>
                        </Button>
                        <ScrollViewer HorizontalAlignment="Center" Width="336" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" VerticalContentAlignment="Top" >
                            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Margin="0,10,0,0" Height="609" Name="ItemsUI" Width="325" >
                                <StackPanel Orientation="Vertical" Width="294" Margin="14,0,0,0" Background="#00D4D4D4" Name="ItemsCollection" />
                            </ScrollViewer>

                        </ScrollViewer>




                    </StackPanel>
                </Grid>
                <Grid Margin="576,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="264" Height="728" Background="#FF454138" >
                    <Image Source="/Database_Designer;component/assets/images/darkbg.png" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="264" Height="728" Stretch="Fill" />
                    <Rectangle Margin="16,24,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="232" Height="232" Stroke="Gray" StrokeThickness="1" Fill="#FF454138" />
                    <Image Source="/Database_Designer;component/assets/images/whitelogo.png" Margin="24,40,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="112" Height="112" Stretch="UniformToFill" />

                    <Image Source="/Database_Designer;component/assets/images/mira/ummm.png" Margin="16,24,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="232" Height="232" Stretch="UniformToFill" />

                    <ScrollViewer
    Margin="16,288,0,56"
    Width="232"
    VerticalScrollBarVisibility="Auto"
    HorizontalScrollBarVisibility="Disabled"
    Background="#FF454138">

                        <StackPanel x:Name="DocsPanel">

                            <Button x:Name="BtnWelcome" Height="39" Margin="0,10,0,0" Background="#4C8F8F8F">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Database_Designer;component/assets/images/window.png"
                       Width="20" Height="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Welcome" Width="154" FontFamily="Assets\Fonts\Inter_28pt-ExtraLight.ttf"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="BtnGeneralSetup" Height="39" Margin="0,10,0,0" Background="#4C8F8F8F">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Database_Designer;component/assets/images/window.png"
                       Width="20" Height="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="General Setup" Width="154" FontFamily="Assets\Fonts\Inter_28pt-ExtraLight.ttf"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="BtnLoginMusic" Height="39" Margin="0,10,0,0" Background="#4C8F8F8F">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Database_Designer;component/assets/images/window.png"
                       Width="20" Height="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Login And Music" Width="154" FontFamily="Assets\Fonts\Inter_28pt-ExtraLight.ttf"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="BtnFirstProject" Height="39" Margin="0,10,0,0" Background="#4C8F8F8F">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Database_Designer;component/assets/images/window.png"
                       Width="20" Height="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="First Project" Width="154" FontFamily="Assets\Fonts\Inter_28pt-ExtraLight.ttf"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="BtnCustomizeProject" Height="39" Margin="0,10,0,0" Background="#4C8F8F8F">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Database_Designer;component/assets/images/window.png"
                       Width="20" Height="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Customize Project" Width="154" FontFamily="Assets\Fonts\Inter_28pt-ExtraLight.ttf"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="BtnFirstTable" Height="39" Margin="0,10,0,0" Background="#4C8F8F8F">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Database_Designer;component/assets/images/window.png"
                       Width="20" Height="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="First Table" Width="154" FontFamily="Assets\Fonts\Inter_28pt-ExtraLight.ttf"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="BtnAddData" Height="39" Margin="0,10,0,0" Background="#4C8F8F8F">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Database_Designer;component/assets/images/window.png"
                       Width="20" Height="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Adding Data" Width="154" FontFamily="Assets\Fonts\Inter_28pt-ExtraLight.ttf"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="BtnExporting" Height="39" Margin="0,10,0,0" Background="#4C8F8F8F">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Database_Designer;component/assets/images/window.png"
                       Width="20" Height="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Exporting And Templates" Width="154" FontFamily="Assets\Fonts\Inter_28pt-ExtraLight.ttf"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="BtnBestPractices" Height="39" Margin="0,10,0,0" Background="#4C8F8F8F">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Database_Designer;component/assets/images/window.png"
                       Width="20" Height="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Best Practices" Width="154" FontFamily="Assets\Fonts\Inter_28pt-ExtraLight.ttf"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="Btn3NF" Height="39" Margin="0,10,0,0" Background="#4C8F8F8F">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Database_Designer;component/assets/images/window.png"
                       Width="20" Height="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Understanding 3NF" Width="154" FontFamily="Assets\Fonts\Inter_28pt-ExtraLight.ttf"/>
                                </StackPanel>
                            </Button>

                        </StackPanel>
                    </ScrollViewer>


                </Grid>
                <Image Source="/Database_Designer;component/assets/images/Mira1.png" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="UniformToFill" IsEnabled="False" Opacity="0.7" Width="368" Margin="208,-184,0,0" Height="920" />
            </Grid>

            <Grid Canvas.Left="0" Canvas.Top="896" Width="504" Height="560" Background="#00F0F0F0" Name="AppList" Visibility="Collapsed" >
            </Grid>


        </WrapPanel>
        <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="568" Height="64" Margin="0,0,0,80" Background="#BD545454" Name="VolOption" Visibility="Collapsed" >
            <StackPanel Orientation="Horizontal" Background="#00D4D4D4" >
                <Image Source="https://userware-xaml-designer-backend-api.azurewebsites.net/images/logo.png" Width="39" Height="45" Margin="10,0,0,0" Name="VolumeImg2" />
                <TextBlock Text="VOL: 000" FontSize="16" FontFamily="/Database_Designer;component/Assets/Fonts/Inter_28pt-ExtraLight.ttf" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Name="VolText" />
                <Slider Width="427" Height="37" Margin="10,0,0,0" Maximum="100" Name="VolSlider" >
                    <Slider.Background>
                        <SolidColorBrush Color="{DynamicResource Theme_TextOnPrimaryColor}" />
                    </Slider.Background>
                </Slider>

            </StackPanel>
        </Grid>
        <MediaElement Name="BGM" AutoPlay="False" />
        <MediaElement Name="SFX" AutoPlay="False" Volume="0.2" />






    </Grid>
</Page>
