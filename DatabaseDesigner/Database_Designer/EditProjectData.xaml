<Page
    x:Class="Database_Designer.EditProjectData"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Database_Designer" Width="906" Height="350">
    
    <Grid>


        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-112,0,-112" Width="900" Height="352">
            <Grid MinHeight="40">
                <Rectangle Fill="#454138" Stroke="Transparent" Height="40" VerticalAlignment="Top" Margin="0,0,2,0" />
                <StackPanel Orientation="Horizontal" MinWidth="500" HorizontalAlignment="Left">
                    <Image Margin="8,4,4,4"
Source="Assets/Images/WILogoNoText.png"
HorizontalAlignment="Left"
MaxHeight="30" MinWidth="30" MinHeight="30" MaxWidth="30" />
                    <TextBlock Foreground="#FFFFFF"
    FontSize="18"
    FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
    VerticalAlignment="Center"
    Text="Edit Project" />
                </StackPanel>
                <StackPanel Width="85" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,3,-3" Height="39" >
                    <Button Name = "ExitButton" Content="X" Width="36" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Background="#FFDCD8C0" HorizontalAlignment="Right" Height="37" >
                        <Button.Foreground>
                            <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                        </Button.Foreground>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid VerticalAlignment="Top" Height="317">
                <Image Stretch="Fill"
                   VerticalAlignment="Top"
                   Source="Assets/Images/BG.png" />
                <Grid Margin="0,8,0,0">
                    <TextBlock Margin="2,8,0,272"
                               FontSize="22"
                               FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
                               Text="Edit Project Details"  TextAlignment="Center" Width="354" Name="Title" Foreground="#FF020202" />
                    <Image Source="/Database_Designer;component/assets/images/whitelogo.png" Margin="24,32,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="176" Height="176" Name="Preview" />
                    <StackPanel Margin="208,48,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="608" Height="184" Orientation="Vertical" Background="#05D4D4D4" >
                        <ScrollViewer Height="186" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" >
                            <WrapPanel Orientation="Vertical" Background="#00F0F0F0" >
                                <StackPanel Height="40" Orientation="Horizontal" Width="585" Background="#00D4D4D4" >
                                    <TextBlock Text="Project Name" FontSize="14" VerticalAlignment="Center" Foreground="#FF020202" >
                                    </TextBlock>
                                    <TextBox Text="TextBox" Width="469" Margin="20,0,0,0" MaxLength="64" Name="ProjectName" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Background="#00D4D4D4" HorizontalAlignment="Center" >
                                    <TextBlock Text="Description" FontSize="14" VerticalAlignment="Center" Height="26" Width="85" Foreground="#FF020202" />
                                    <TextBox Text="TextBox" VerticalAlignment="Top" Width="469" Margin="20,0,0,0" TextWrapping="Wrap" MaxLength="1024" Name="Desc" />
                                </StackPanel>
                                <Button MinHeight="35" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Background="#9D9785" MinWidth="80" Content="Change Image (Saved When Changed)" Width="580" Height="24" Name="ChangeImage" FontSize="13" Margin="0,10,0,0" Foreground="#FF020202" />
                                <Button MinHeight="35" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" MinWidth="80" Content="Delete Project" Width="580" Height="24" Name="DeleteProject" FontSize="13" Margin="0,10,0,0" Background="Red" >
                                    <Button.Foreground>
                                        <SolidColorBrush Color="{DynamicResource Theme_TextOnPrimaryColor}" />
                                    </Button.Foreground>
                                </Button>

                            </WrapPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Grid>
                <Grid Margin="0,0,0,24" MinHeight="40" MaxHeight="40" VerticalAlignment="Bottom" Height="64">
                    <StackPanel HorizontalAlignment="Center"
                            MaxHeight="60"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                        <Button Margin="5,0"
                            FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
                            Background="#9D9785"
                            MinWidth="80"
                            HorizontalAlignment="Center"
                            Content="Save" Name="Save" Width="421" Height="33" Foreground="#FF020202"/>
                        <Button Margin="5,0"
                            FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
                            Background="#9D9785"
                            MinWidth="80"
                            HorizontalAlignment="Center" Name="Cancel" Content="Cancel" Width="421" Height="33" Foreground="#FF020202"
 />
                    </StackPanel>
                </Grid>
                <TextBlock Text="TextBlock" FontSize="14" Margin="8,216,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="16" TextAlignment="Center" Width="448" Name="Setup" Visibility="Collapsed" />
            </Grid>

        </StackPanel>
        
    </Grid>


</Page>
