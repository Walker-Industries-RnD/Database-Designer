<Page
    x:Class="Database_Designer.TablesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Database_Designer" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" Width="1310" Height="920">

    <Grid x:Name="TablesViewUI" MaxWidth="1310" MaxHeight="920" MinHeight="920" Width="1310" MinWidth="1310" Visibility="Visible" Height="920">

        <StackPanel VerticalAlignment="Center" MinHeight="920" MaxHeight="1310">
            <!-- Header -->
            <Grid Height="40">
                <Rectangle Fill="#454138" Height="40" Margin="0,0,12,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="4,0,0,0">
                    <Image Source="Assets/Images/WILogoNoText.png" Width="34" Height="34"/>
                    <TextBlock Foreground="White" FontSize="18" 
                  FontFamily="Assets\Fonts\Inter_28pt-ExtraLight.ttf" 
                  VerticalAlignment="Center" Margin="4,0,0,0"
                  Text="Mira - Resident Hardware Maintainer"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Width="88" Margin="0,0,12,0"/>
            </Grid>

            <!-- Content Area -->
            <Grid Height="880">
                <Image Stretch="Fill" Height="880" Source="Assets/Images/BG.png"/>
                <StackPanel>
                    <!-- Search Area -->
                    <StackPanel Orientation="Horizontal" Height="48">
                        <TextBox Text="Type A Table's Name Here" Padding="10" 
                  VerticalAlignment="Center" Width="1060" Height="40"
                  FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" SelectionStart="8" SelectionLength="1" PlaceholderText="Enter A Table Name" AcceptsTab="False" FontSize="14" Margin="10,0,0,0" Background="#DB464239"/>
                        <Button Width="100" Margin="10,0,0,0" Content="Search" Background="#FF454138" Height="39" Name="TableViewSearch"/>
                        <Button Width="100" Margin="10,0,0,0" Content="Create New" Background="#FF454138" Height="39" Name="TableViewCreateNew"/>

                    </StackPanel>

                    <!-- Tables List -->
                    <ScrollViewer  VerticalScrollBarVisibility="Disabled"
                     Width="1300" Height="820">
                        <StackPanel VerticalAlignment="Top" Height="820">
                            <StackPanel Orientation="Horizontal" Height="808" Width="1292">
                                <Grid Height="794" VerticalAlignment="Top">
                                    <!-- Simulated background (clickable) area -->
                                    <Button Background="#D2CEB3"/>
                                    <StackPanel Background="Transparent" Width="440" Height="800" IsEnabled="False">
                                        <!-- Table Header -->
                                        <StackPanel Orientation="Horizontal" Background="#514F46" Height="40">
                                            <Image Margin="10,4,4,4" HorizontalAlignment="Left" Width="36" Height="36"
                          Source="Assets/Images/WhiteLogo.png" Stretch="Fill"/>
                                            <TextBlock FontSize="18" 
                             VerticalAlignment="Center"
                              Text="Table.TableName" Foreground="White" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Margin="10,0,0,0"/>
                                        </StackPanel>
                                        <!-- Table Icon -->
                                        <Image Margin="0,30" Source="Assets/Images/BlackLogo.png" Width="400" Height="400"/>
                                        <!-- Divider -->
                                        <Rectangle Fill="Black" Width="380" Height="2" HorizontalAlignment="Center"/>
                                        <!-- Description -->
                                        <TextBlock Margin="0,30,0,8" Width="400" FontSize="16" 
                            FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" 
                            Text="No Description Provided.">
                                            <TextBlock.Foreground>
                                                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                        <!-- Preview Item -->
                                        <Grid Height="70">
                                            <Grid Margin="10,0">
                                                <Image Margin="0,10,0,0" HorizontalAlignment="Left" 
                            Width="32" Height="32" 
                            Source="Assets/Images/BlackLogo.png"/>
                                                <TextBlock Margin="40,14,0,0" HorizontalAlignment="Left" 
                                FontSize="16" 
                                FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" 
                                Foreground="Black" 
                                Text="Item Name Goes Here..."/>
                                                <TextBlock Margin="40,40,0,10" HorizontalAlignment="Left" 
                                FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" 
                                Foreground="Black" 
                                Text="32 Character Limit"/>
                                            </Grid>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>

</Page>
