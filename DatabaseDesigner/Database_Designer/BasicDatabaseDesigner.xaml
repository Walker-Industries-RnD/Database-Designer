<Page
    x:Class="Database_Designer.BasicDatabaseDesigner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Database_Designer" Width="1310" Height="920" Name="Main">

    <Grid x:Name="BasicDatabaseSetupUI" MaxWidth="1310" MaxHeight="920" MinHeight="920" Width="1310" MinWidth="1310" Visibility="Visible">

        <StackPanel VerticalAlignment="Center" MinHeight="920" MaxHeight="1310">
            <!-- Header -->
            <Grid MinHeight="40">
                <Rectangle Fill="#454138" Stroke="Transparent" Height="40" VerticalAlignment="Top" Margin="0,0,12,0" />
                <StackPanel Orientation="Horizontal" MinWidth="500" HorizontalAlignment="Left">
                    <Image Margin="8,4,4,4"
             Source="Assets/Images/WILogoNoText.png"
             HorizontalAlignment="Left"
             MaxHeight="30" MinWidth="30" MinHeight="30" MaxWidth="30" />
                    <TextBlock Foreground="#FFFFFF"
                 FontSize="18"
                 FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
                 VerticalAlignment="Center"
                 Text="Basic Database Designer" />
                </StackPanel>
                <StackPanel Width="71" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,14,-3" Height="39" >
                    <Button Name = "ExitButton" Content="X" Width="36" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Background="#FFDCD8C0" HorizontalAlignment="Right" Height="37" >
                        <Button.Foreground>
                            <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                        </Button.Foreground>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main content -->
            <Grid VerticalAlignment="Top" MinHeight="880" MaxHeight="220" Visibility="Visible">
                <Image Stretch="Fill"
           VerticalAlignment="Top"
           MinHeight="880" MaxHeight="220"
           Source="Assets/Images/BGAlt.png" />

                <ScrollViewer Visibility="Visible">
                    <!-- Questioning Section (Procedurally Generated) -->
                    <StackPanel VerticalAlignment="Top">
                        <!-- Question Text -->
                        <StackPanel Height="864" Orientation="Vertical" Background="#00D4D4D4" Name="Finalized" Visibility="Collapsed" >
                            <TextBlock Text="Mira's Taken Note Of Your Rows!" FontSize="20" Height="29" TextAlignment="Center" Margin="0,20,0,14" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" >
                                <TextBlock.Foreground>
                                    <SolidColorBrush Color="{DynamicResource Theme_TextOnPrimaryColor}" />
                                </TextBlock.Foreground>
                            </TextBlock>
                            <Image Source="Assets/Images/NewMira.png" Stretch="UniformToFill" HorizontalAlignment="Center" Width="526" Height="610" RenderTransformOrigin="0,0" VerticalAlignment="Center" />
                            <TextBlock Text="&quot;Confirmed. Against my better judgment, but whatever floats your boat.&quot;" FontSize="17" Height="42" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" TextAlignment="Center" Margin="0,20,0,020" >
                                <TextBlock.Foreground>
                                    <SolidColorBrush Color="{DynamicResource Theme_TextOnPrimaryColor}" />
                                </TextBlock.Foreground>
                            </TextBlock>
                            <Button Margin="5,0"
     MinHeight="35"
     FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
     Background="#9D9785"
     MinWidth="80"
     HorizontalAlignment="Center"
     Content="Close Page" Name="ClosePage" FontSize="16" Width="238" Height="38" />


                        </StackPanel>
                        <StackPanel Orientation="Vertical" Background="#00D4D4D4" Name="Step" Visibility="Visible">
                            <TabControl TabIndex="2147483644" Name="Tabs">
                                <TabItem Header="TabItem1">
                                    <Grid>
                                        <TextBlock Text="Content 1" FontSize="14" Margin="8,16,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                    </Grid>
                                </TabItem>
                                <TabItem Header="TabItem2">
                                    <Grid>
                                        <TextBlock Text="Content 2" FontSize="14" Margin="8,16,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
                                    </Grid>
                                </TabItem>
                            </TabControl>

                            <!-- Button for response (decorative) -->

                            <!-- TextBox Section -->







                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>


            </Grid>
        </StackPanel>
    </Grid>

</Page>