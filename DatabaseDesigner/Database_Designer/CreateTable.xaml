<Page
    x:Class="Database_Designer.CreateTable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Database_Designer" HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Height="407">

    <Grid x:Name="DateTimeInfoUI" MinHeight="250" MinWidth="470" Visibility="Visible"  >


        <StackPanel MinHeight="260" Margin="0,-56,0,0">
            <Grid MinHeight="40">
                <Rectangle Fill="#454138" Stroke="Transparent" Height="40" VerticalAlignment="Top" Margin="0,0,4,0" />
                <StackPanel Orientation="Horizontal" MinWidth="500" HorizontalAlignment="Left">
                    <Image Margin="8,4,4,4"
   Source="Assets/Images/WILogoNoText.png"
   HorizontalAlignment="Left"
   MaxHeight="30" MinWidth="30" MinHeight="30" MaxWidth="30" />
                    <TextBlock Foreground="#FFFFFF"
       FontSize="18"
       FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
       VerticalAlignment="Center"
       Text="Create Table" />
                </StackPanel>
                <StackPanel Width="79" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,6,-3" Height="39" >
                    <Button Name = "ExitButton" Content="X" Width="36" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Background="#FFDCD8C0" HorizontalAlignment="Right" Height="37" >
                        <Button.Foreground>
                            <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                        </Button.Foreground>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid VerticalAlignment="Top" MinHeight="220" Height="421">
                <Image Stretch="Fill"
                   VerticalAlignment="Top"
                   MinHeight="220"
                   Source="Assets/Images/BG.png" Height="424" />
                <WrapPanel Margin="0,16,0,64" MinHeight="120" MinWidth="350" Orientation="Vertical" Width="500">
                    <WrapPanel Height="51" Width="349" Background="#00D4D4D4" Margin="30,4,0,10" >
                        <Image Source="/Database_Designer;component/assets/images/blacklogo.png" Width="50" Height="50" />
                        <TextBlock Text="Create A New Table" FontSize="22" Height="38" Margin="10,0,0,0" >
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                            </TextBlock.Foreground>
                        </TextBlock>
                    </WrapPanel>
                    <WrapPanel Height="32" Width="499" Background="#00D4D4D4" Margin="0,4,0,0" >
                        <TextBlock Text="Schema" FontSize="14" VerticalAlignment="Center" Width="93" >
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBox Width="402" Text="Schema.Name.Like.This" Name="SchemaInput" />
                    </WrapPanel>
                    <WrapPanel Height="32" Width="499" Background="#00D4D4D4" Margin="0,4,0,0" >
                        <TextBlock Text="Table Name" FontSize="14" VerticalAlignment="Center" Width="93" >
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBox Width="402" Text="Table Name" Name="TableInput" />
                    </WrapPanel>
                    <WrapPanel Height="96" Width="499" Background="#00D4D4D4" Margin="0,4,0,0" >
                        <TextBlock Text="Description" FontSize="14" VerticalAlignment="Center" Width="93" Height="20" >
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                            </TextBlock.Foreground>
                        </TextBlock>
                        <TextBox Width="402" Height="94" Text="Description Goes Here" VerticalContentAlignment="Top" Padding="12" Name="Description" />
                    </WrapPanel>
                    <TextBlock Text="Error Text" FontSize="14" Height="18" TextAlignment="Right" TextTrimming="CharacterEllipsis" Margin="0,4,0,0" Foreground="Red" Name="Error" />
                    <TextBlock Text="No Template Selected." FontSize="14" Height="24" TextAlignment="Right" TextTrimming="CharacterEllipsis" Margin="0,4,0,0" Name="NoTemplate" >
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock Text="Note: When using a template, your input will be used as a prefix for all template tables (e.g., 'users' becomes 'prefix_users')! If the geenerated name is already used however, it will be skipped." FontSize="12" TextAlignment="Right" TextTrimming="CharacterEllipsis" HorizontalAlignment="Right" Width="480" TextWrapping="Wrap" FontStyle="Italic" Foreground="#FF1B1B1B" />
                </WrapPanel>
                
                <Grid Margin="0,0,0,10" MinHeight="70" MaxHeight="70" VerticalAlignment="Bottom">
                    <StackPanel HorizontalAlignment="Center"
                            MaxHeight="60"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                        <Button Margin="5,0"
                            MinHeight="35"
                            FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
                            Background="#9D9785"
                            MinWidth="80"
                            HorizontalAlignment="Center"
                            Content="Cancel" Name="Cancel" >
                            <Button.Foreground>
                                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                            </Button.Foreground>
                        </Button>
                        <Button Margin="5,0"
                            MinHeight="35"
                            FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
                            Background="#9D9785"
                            MinWidth="80"
                            HorizontalAlignment="Center"
                            Content="Use A Template" Name="Templates" >
                            <Button.Foreground>
                                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                            </Button.Foreground>
                        </Button>
                        <Button Margin="5,0"
                    MinHeight="35"
                    FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
                    Background="#9D9785"
                    MinWidth="80"
                    HorizontalAlignment="Center"
                    Content="Default" Name="Default" >
                            <Button.Foreground>
                                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                            </Button.Foreground>
                        </Button>
                        <Button Margin="5,0"
                            MinHeight="35"
                            FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
                            Background="#9D9785"
                            MinWidth="80"
                            HorizontalAlignment="Center"
                            Content="Finalize" Name="Finalize" >
                            <Button.Foreground>
                                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                            </Button.Foreground>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </StackPanel>
    </Grid>

</Page>
