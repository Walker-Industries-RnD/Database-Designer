<Page
    x:Class="Database_Designer.CreateNewTableTemplateSelection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Database_Designer">

    <Grid x:Name="MainDesignerUI" MaxWidth="1310" MaxHeight="920" MinHeight="920" Width="1310" MinWidth="1310" Visibility="Visible" >


        <StackPanel VerticalAlignment="Center" MinHeight="920" MaxHeight="1310">
            <!-- Header Section -->
            <Grid MinHeight="40">
                <Rectangle Fill="#454138" Stroke="Transparent" Height="40" VerticalAlignment="Top" Margin="0,0,12,0" />
                <StackPanel Orientation="Horizontal" MinWidth="500" HorizontalAlignment="Left">
                    <Image Margin="8,4,4,4"
    Source="Assets/Images/WILogoNoText.png"
    HorizontalAlignment="Left"
    MaxHeight="30" MinWidth="30" MinHeight="30" MaxWidth="30" />
                    <TextBlock Foreground="#FFFFFF"
        FontSize="18"
        FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
        VerticalAlignment="Center"
        Text="Template Selection" />
                </StackPanel>
                <StackPanel Width="71" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,14,-3" Height="39" >
                    <Button Name = "ExitButton" Content="X" Width="36" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Background="#FFDCD8C0" HorizontalAlignment="Right" Height="37" >
                        <Button.Foreground>
                            <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                        </Button.Foreground>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content Area -->
            <Grid VerticalAlignment="Top" MinHeight="880" MaxHeight="220">
                <Image Stretch="Fill"
         VerticalAlignment="Top"
         MinHeight="880" MaxHeight="220"
         Source="Assets/Images/BG.png" />
                <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Margin="0,48,16,16" >
                    <WrapPanel Background="#00D4D4D4" Name="TemplatesHolder" Width="1273" >
                       
                        <WrapPanel Width="1270" Height="195" Background="#1C000000" Visibility="Collapsed" >
                            <StackPanel Width="128" Height="167" Background="#00F0F0F0" >
                                <Image Source="/Database_Designer;component/assets/images/default%20pfp.png" Height="130" Width="130" />
                                <TextBlock Text="Author Name" FontSize="14" TextAlignment="Center" TextTrimming="CharacterEllipsis" Height="17" Margin="0,10,0,0" />
                            </StackPanel>
                            <StackPanel Width="1139" Orientation="Vertical" Background="#00D4D4D4" Height="191" >
                                <StackPanel Orientation="Vertical" Background="#00D4D4D4" >
                                    <Image Source="/Database_Designer;component/assets/images/non-descript%20row%20banner.png" Width="1137" HorizontalAlignment="Left" Height="158" />
                                    <Button Content="Collapse" Height="32" Background="#FF9D9785" FontFamily="Assets/Fonts/Inter/Inter_28pt-Light" >
                                        <Button.Foreground>
                                            <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                                        </Button.Foreground>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </WrapPanel>
                        <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Width="1269" Height="429" Visibility="Collapsed" >
                            <WrapPanel Orientation="Horizontal" Background="#00D4D4D4" >
                                <Grid Width="407" Height="198" Margin="4" Visibility="Collapsed">

                                    <!-- Background clickable button -->

                                    <!-- Overlay UI (non-clickable) -->
                                    <StackPanel IsHitTestVisible="False"
                Background="Transparent" Margin="0,0,0,-8">

                                        <!-- STATUS HEADER -->
                                        <StackPanel Orientation="Horizontal"
                    Margin="10,10,0,0">
                                        </StackPanel>

                                        <!-- Separator -->
                                        <Rectangle Margin="0,10,0,0"
                   HorizontalAlignment="Center"
                   Width="370"
                   Height="2"
                   Fill="Black"/>

                                        <!-- USERS BOX -->
                                        <Grid Background="#FF514F46"
              Height="33"
              Width="380"
              Margin="0,14,0,0"
              HorizontalAlignment="Center">
                                            <TextBlock Margin="14,0,10,0"
                       VerticalAlignment="Center"
                       FontFamily="Assets/Fonts/Inter/Inter_28pt-Light"
                       FontSize="16"
                       Foreground="White"
                       Text="Table Name" TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                        <ScrollViewer Height="126" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Width="377" IsEnabled="True" >
                                            <StackPanel Orientation="Vertical" Background="#00D4D4D4" >
                                                <TextBlock Width="354"
FontSize="16"
TextWrapping="Wrap"
FontFamily="Assets/Fonts/Inter/Inter_28pt-Light"
Foreground="Black"
Text="The owner of the server (Required)." HorizontalAlignment="Left" Margin="0,4,0,0"/>
                                                <TextBlock Width="354"
FontSize="16"
TextWrapping="Wrap"
FontFamily="Assets/Fonts/Inter/Inter_28pt-Light"
Foreground="Black" HorizontalAlignment="Left" Margin="0,2,0,0" Text="Rows, Indexes and References"/>
                                            </StackPanel>
                                          
                                        </ScrollViewer>

                                        <!-- IMAGE -->

                                        <!-- BIO TEXT -->
                                        
                                    </StackPanel>

                                </Grid>
                            </WrapPanel>
                        </ScrollViewer>
                   
                        
                    </WrapPanel>
                </ScrollViewer>
                <StackPanel Orientation="Horizontal" Height="48" ProgressiveRenderingChunkSize="5" VerticalAlignment="Top">
                    <TextBox Text="Type A Project's Name/Description Here" Padding="10" 
VerticalAlignment="Center" Width="1146" Height="40"
FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" SelectionStart="8" SelectionLength="1" PlaceholderText="Enter A Table Name" AcceptsTab="False" FontSize="14" Margin="4,0,0,0" Background="#DB464239" Name="SearchBar"/>
                    <ToggleButton Width="79" Margin="10,0,0,0" Content="Favorites" Background="#FF454138" Height="39" Name="Favorites" FontSize="13" Visibility="Collapsed"/>

                    <Button Width="100" Margin="10,0,0,0" Content="Search" Background="#FF454138" Height="39" Name="TableViewSearch" FontSize="13"/>

                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
