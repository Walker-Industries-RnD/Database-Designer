<Page
    x:Class="Database_Designer.DatabaseTemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Database_Designer" Width="1310" Height="920">

    <Grid x:Name="DesignerTemplatesUI" MaxWidth="1310" MaxHeight="920" MinHeight="920" Width="1310" MinWidth="1310" Visibility="Visible"  >


        <StackPanel VerticalAlignment="Center" MinHeight="920" MaxHeight="1310">
            <Grid MinHeight="40">
                <Rectangle Fill="#454138" Stroke="Transparent" Height="40" VerticalAlignment="Top" Margin="0,0,12,0" />
                <StackPanel Orientation="Horizontal" MinWidth="500" HorizontalAlignment="Left">
                    <Image Margin="8,4,4,4"
   Source="Assets/Images/WILogoNoText.png"
   HorizontalAlignment="Left"
   MaxHeight="30" MinWidth="30" MinHeight="30" MaxWidth="30" />
                    <TextBlock Foreground="#FFFFFF"
       FontSize="18"
       FontFamily="Assets\Fonts\Inter_28pt-Light.ttf"
       VerticalAlignment="Center"
       Text="Database Templates" />
                </StackPanel>
                <StackPanel Width="71" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,14,-3" Height="39" >
                    <Button Name = "ExitButton" Content="X" Width="36" FontFamily="Assets\Fonts\Inter_28pt-Light.ttf" Background="#FFDCD8C0" HorizontalAlignment="Right" Height="37" >
                        <Button.Foreground>
                            <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                        </Button.Foreground>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid VerticalAlignment="Top" MinHeight="880" MaxHeight="220">
                <Image Stretch="Fill"
                   VerticalAlignment="Top"
                   MinHeight="880" MaxHeight="220"
                   Source="Assets/Images/BG.png" />
                <StackPanel Orientation="Horizontal" MinWidth="220">
                    <ScrollViewer VerticalAlignment="Top" MinWidth="500" HorizontalAlignment="Left" MaxWidth="500" VerticalScrollBarVisibility="Visible">
                        <StackPanel MaxWidth="480" MinWidth="480" HorizontalAlignment="Left" MinHeight="870" Height="890" MaxHeight="870" Name="ProjectPanel">
                            <StackPanel MinWidth="450" HorizontalAlignment="Left" Orientation="Horizontal" MinHeight="170" Height="170" MaxHeight="170">
                                <Image Margin="40,0,0,0" MaxHeight="150" Source="Assets/Images/BlackLogo.png" />
                                <Image Margin="10,0,0,0"
                                   MaxHeight="90" MinHeight="9" MinWidth="230" MaxWidth="230"
                                   Stretch="UniformToFill"
                                   Source="Assets/Images/DatabaseDesigner.png" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <StackPanel MinWidth="800">
                        <Image Margin="0,30,30,0"
                           MaxWidth="780" MinWidth="600"
                           Source="/Database_Designer;component/assets/images/non-descript%20template%20project%20banner.png" Width="829" Height="679" Stretch="Fill" Name="PreviewImg" />
                        <Grid Width="781" HorizontalAlignment="Left" Height="133" >
                            <Grid.Background>
                                <SolidColorBrush Color="{DynamicResource Theme_BackgroundColor}" />
                            </Grid.Background>
                            <Image Source="/Database_Designer;component/assets/images/default%20pfp.png" Margin="8,8,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="96" Height="88" Name="AuthorImg" />
                            <ScrollViewer Margin="104,8,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="672" Height="120" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" >
                                <StackPanel Orientation="Vertical" Background="#00D4D4D4" >
                                    <TextBlock Text="Template Name Goes Here!" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Width="640" TextAlignment="Center" FontStyle="Italic" Name="MainInfo" Margin="0,10,0,0">
                                        <TextBlock.Foreground>
                                            <SolidColorBrush Color="{DynamicResource Theme_TextOnPrimaryColor}" />
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                    <TextBlock Text="Click A Template To View More Info About it!" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Width="640" TextAlignment="Center" FontStyle="Italic" Margin="0,10,0,0" Name="Description" >
                                        <TextBlock.Foreground>
                                            <SolidColorBrush Color="{DynamicResource Theme_TextOnPrimaryColor}" />
                                        </TextBlock.Foreground>
                                    </TextBlock>
                                </StackPanel>
                            </ScrollViewer>
                            <TextBlock Text="???" FontSize="13" Margin="8,104,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="24" Width="88" TextAlignment="Center" TextWrapping="Wrap" Name="AuthorName" >
                                <TextBlock.Foreground>
                                    <SolidColorBrush Color="{DynamicResource Theme_TextOnPrimaryColor}" />
                                </TextBlock.Foreground>
                            </TextBlock>
              
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>

</Page>
